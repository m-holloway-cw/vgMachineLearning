function postLogin(){
  $.ajax({
    url: '/vgLogin',
    type: 'post',
    data: $('#loginForm').serialize(),
    success:function(data){
      console.log(data)
      if(data){
        window.location.replace='https://raxa.dev/vgsales';
      } else {
        document.getElementById('status').innerHTML =  'Login Failed';
      }
    },
    error: function(XMLHttpRequest, textStatus, errorThrown) {
        //alert("Error occurred in request");
      }
  });
};
</script>
  </html>
